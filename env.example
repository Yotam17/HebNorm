# FastAPI
APP_HOST=0.0.0.0
APP_PORT=8000

# Hugging Face Model
NIKUD_MODEL=dicta-il/dictabert-large-char-menaked
HF_HOME=/app/.cache
TRANSFORMERS_CACHE=/app/.cache

# Python
PYTHONPATH=/app

# Logging
LOG_LEVEL=INFO

# Model Cache
MODEL_CACHE_DIR=/app/.cache

# Development
DEV_MODE=true

# Server
MAX_WORKERS=1

# Timeout
TIMEOUT=30

# CORS
CORS_ORIGINS=*

# Debug
DEBUG=true

# Environment
ENVIRONMENT=development

# Version
VERSION=0.1.0

# API
API_PREFIX=/api/v1

# Model
MODEL_DEVICE=auto
MODEL_TRUST_REMOTE_CODE=true
MODEL_CACHE_SIZE=1024
MODEL_DOWNLOAD_TIMEOUT=300
